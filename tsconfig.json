{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": ["src/*", "src/without-testcafe/index.js"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "enable": true
  }
}
